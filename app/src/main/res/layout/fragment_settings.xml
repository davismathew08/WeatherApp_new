<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click Clear to delete booked marked locations form the list..."
        android:ellipsize="end"
        android:fontFamily="@font/segoe_ui_semibold"
        android:gravity="center|start"
        android:textColor="@color/black_gray"
        android:textSize="@dimen/text_size_16sp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_30dp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/ivOutlinedBookmark"
        app:srcCompat="@drawable/delete_bin"
        android:layout_marginEnd="@dimen/margin_5dp"
        android:padding="@dimen/margin_5dp"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/settingBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_blank_fragment"
        android:layout_gravity="center"
        android:backgroundTint="@color/color_accent_red"/>

</LinearLayout>